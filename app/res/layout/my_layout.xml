<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/FinalResult"
        android:textSize="30dp"
        android:gravity="center|right"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
    </TextView>
    <TextView
        android:id="@+id/CalculatorScreen"
        android:textSize="30dp"
        android:gravity="center|right"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#C0C0C0"
        android:orientation="horizontal">
        <Button
            android:id="@+id/del"
            android:layout_width="0dp"
            android:background="#00ffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="DEL"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:background="#00ffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="c"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/leftBrace"
            android:layout_width="0dp"
            android:background="#00ffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="("
            android:textSize="25dp"/>
        <Button
            android:id="@+id/rightBrace"
            android:layout_width="0dp"
            android:background="#00ffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=")"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#c0c0c0"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:background="#c0c0c0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:background="#c0c0c0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:background="#c0c0c0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:background="@color/cardview_dark_background"
            android:textColor="#FFFFFF"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#c0c0c0"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:background="#c0c0c0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:background="#c0c0c0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:background="#c0c0c0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/product"
            android:layout_width="0dp"
            android:textColor="#ffffff"
            android:background="@color/cardview_dark_background"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#c0c0c0"
        android:orientation="horizontal">
        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:background="#c0c0c0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:background="#c0c0c0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:background="#c0c0c0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/subtract"
            android:layout_width="0dp"
            android:background="@color/cardview_dark_background"
            android:textColor="#FFFFFF"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#c0c0c0"
        android:orientation="horizontal">
        <Button
            android:id="@+id/point"
            android:layout_width="0dp"
            android:background="#c0c0c0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="25dp"/>
        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:background="#c0c0c0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/equals"
            android:layout_width="0dp"
            android:background="#ADD8E6"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="25dp"/>
        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:background="@color/cardview_dark_background"
            android:textColor="#FFFFFF"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="25dp"/>
    </LinearLayout>

</LinearLayout>
